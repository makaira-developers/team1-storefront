.news-grid-dynamic
  .mb-1
    margin-bottom: 0.25em

  .news-grid-container
    display flex
    justify-content center
    flex-wrap: wrap;
    align-items: stretch;


    .news-item-container
      padding 0.2em
      @media (min-width $breakpoint-small)
        flex-basis 100%
      @media (min-width $breakpoint-medium)
        flex-basis 50%
      @media (min-width $breakpoint-large)
        flex-basis 25%


    .news-item
      display: flex;
      flex-direction: column;
      padding: 1em;
      border: 1px #aaa solid;
      border-radius: 2%;
      height: 100%;

      img
        object-fit: cover;
        object-position: center;
        width: 100%;
        height: 50vw
        @media (min-width $breakpoint-small)
           height: 50vw
        @media (min-width $breakpoint-medium)
          height: 25vw
        @media (min-width $breakpoint-large)
          height: 12vw


      h1
        font-size larger

    a
      background-color: #eee;
      padding: 1.2rem;
      float: right;
      font-weight: bolder;
      border-radius: 2%;
      margin-top: 1em;

    .news-text
      margin-top: 1em