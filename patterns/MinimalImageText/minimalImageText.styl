.minimal-image-text
  position: relative
  display block
  padding: 40px

  .minimal-image-text-content-container
    width 100%
    margin-bottom: 20px

    h2
      font-size: 28px
      margin-bottom: 15px
      letter-spacing: 0em

      @media (min-width $breakpoint-medium)
        font-size: 50px

    @media (min-width $breakpoint-medium)
      position: absolute
      width 400px
      bottom: 200px
      left: 50px

    .minimal-image-text-content-button-container
      margin-top: 25px

    .btn-pretty
      border: 1px solid #333
      border-radius: 25px
      padding: 5px 25px
      font-size: 18px
      background: transparent
      transition: all .1s ease-in-out

      &:hover
        background: var(--primary)
        border-color: var(--primary)
        color: var(--tertiary)


  img 
    width: 100%

  .row
    @media (min-width $breakpoint-medium)
      display: flex
      flex-direction: row-reverse;

      .col-md-6
        width: 50%
        position relative

.mb-3
  margin-bottom: 1.5rem